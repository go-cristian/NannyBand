<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:minHeight="?android:attr/actionBarSize"
  >

  <TextView
    android:id="@+id/notification_title"
    style="@style/AppTheme.Notification.Title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:lines="1"
    />

  <TextView
    android:id="@+id/notification_subtitle"
    style="@style/AppTheme.Notification.Subtitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/notification_title"
    android:layout_toLeftOf="@+id/notification_hour"
    android:layout_toStartOf="@+id/notification_hour"
    />

  <TextView
    android:id="@+id/notification_hour"
    style="@style/AppTheme.Notification.Hour"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/notification_title"
    android:lines="1"
    />

</RelativeLayout>